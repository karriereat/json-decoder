{
    "name": "karriere/json-decoder",
    "description": "JsonDecoder implementation that allows you to convert your JSON data into PHP class objects",
    "keywords": ["json", "decoder"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Alexander Lentner",
            "email": "alexander.lentner@karriere.at",
            "role": "Maintainer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Karriere\\JsonDecoder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Karriere\\JsonDecoder\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0 || ^8.1 || ^8.2",
        "php-di/phpdoc-reader": "^2.1"
    },
    "require-dev": {
        "laravel/pint": "^1.5 || ^1.6",
        "pestphp/pest": "^1.22",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 512M",
        "lint": "pint --test",
        "lint:verbose": "pint -v --test",
        "fix": "pint",
        "test": "pest",
        "coverage": "pest --coverage --ci --coverage-html coverage --coverage-clover coverage.xml --log-junit junit.xml",
        "report": "pest --coverage",
        "report:html": "pest --coverage --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
